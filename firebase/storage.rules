rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // User-specific storage rules
    match /users/{userId}/{allPaths=**} {
      // Users can only read/write their own files
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // More granular rules (optional - for additional security)
    match /users/{userId}/uploads/pdfs/{fileHash}.pdf {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.contentType == 'application/pdf'
                   && request.resource.size < 50 * 1024 * 1024; // 50MB limit
    }
    
    match /users/{userId}/uploads/images/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.contentType.matches('image/.*')
                   && request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    match /users/{userId}/uploads/documents/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.contentType.matches('text/.*')
                   && request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    match /users/{userId}/assets/thumbnails/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.contentType == 'image/jpeg'
                   && request.resource.size < 1 * 1024 * 1024; // 1MB limit
    }
  }
}
